@model Cusrim.Core.ViewModels.AttachViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    Html.RenderPartial("../Navbar");
}
@if (TempData["message"] != null)
{
    <div class=" alert alert-danger">
        <strong>@TempData["message"]</strong>
    </div>
}

<div class="container">


    @using (Html.BeginForm("AttachStudent", "Admin"))
    {

        <div class=" form-signin">

            <div class="form-group  ">
                <label>Faculty Name</label><br />
                <div class="input-group shadow_p">
                    
                    <div class="form_details font-weight-bold ">
                        @Html.DisplayTextFor(m => m.Faculty.Name)

                    </div>
                </div>

            </div>

            <div class="form-group ">
                <label>Students</label>
                <div class="input-group shadow_p">
                    
                    @Html.DropDownListFor(m => m.Student.Id, new SelectList(Model.Students, "id", "Name"), "Select Student ", new { @class = "form-control", required = "required" })

                </div>
            </div><br />

            <input type="hidden" name="facultyId" value="@Model.Faculty.Id" />
            @Html.AntiForgeryToken()
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>

        </div>
    }


</div>

