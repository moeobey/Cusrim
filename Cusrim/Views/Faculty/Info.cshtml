@model Cusrim.Core.Models.Faculty
@{
    ViewBag.Title = "Info";
}

<h2>Info</h2>


<div class="container">
    <div>
        <div class="text-center">
            <h5>SETUP PROFILE</h5>
        </div>
        @using (Html.BeginForm("Save", "Faculty", FormMethod.Post, new { @class = "" }))

        {
            <form class="">
                <div class="info-form ">


                    <div>
                        <h3>Basic Information</h3>

                    </div>
                    <hr />

                    <div class="">


                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label for="firstName">Name</label>
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter your name", required = "required" })

                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="Level">Phone Number</label>
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Enter your phone number", required = "required" })

                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="lastName">Department</label>
                                @Html.TextBoxFor(m => m.Department, new { @class = "form-control", placeholder = "Enter your department", required = "required" })

                            </div>
                        </div>


                    </div>
                </div>
              

                <div class="checkbox mt-3 text-center">
                    <button class="btn w-25 text-center btn-block bg_yellow align_center bg-success" type="submit">Save</button>
                </div>
            </form>

        }
    </div>
</div>